import java.util.Scanner;

public class donguler1 {
    public static void main(String[] args) {

        int a, total=0;
        Scanner inp=new Scanner(System.in);

        do{
            System.out.print("Please enter the number: ");
            a=inp.nextInt();
            if(a%4==0 && a%2==0){
                total+=a;
            }
        }while(a>0);
            System.out.print("Toplam: "+total);
    }
}
