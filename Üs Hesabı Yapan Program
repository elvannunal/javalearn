import java.util.Scanner;

public class recusiveİleÜsAlma {

    static int usluSayi(int a,int b){

        int result= 1;

        if(a==0){
            return 1;
        }
        for(int i=1; i<=b; i++){

            result*=a;

        }return result;
    }
    public static void main(String[] args) {

        Scanner inp=new Scanner(System.in);

        int a,b;
        System.out.print("Tabandaki sayiyi giriniz: ");
        a=inp.nextInt();
        System.out.print("Ustteki sayiyi giriniz: ");
        b=inp.nextInt();
        System.out.print("Sonuc: "+usluSayi(a,b));
    }
}
